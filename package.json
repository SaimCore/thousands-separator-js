{
  "name": "@saimcore/thousands-separator-js",
  "version": "1.0.1",
  "description": "A simple utility for formatting numbers with thousands separators.",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "thousands-separator",
    "num-commas",
    "number-separator",
    "format-number",
    "javascript",
    "typescript"
  ],
  "homepage": "https://github.com/SaimCore/thousands-separator-js#readme",
  "bugs": {
    "url": "https://github.com/SaimCore/thousands-separator-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SaimCore/thousands-separator-js.git"
  },
  "license": "MIT",
  "author": "Purin Pintakhiew",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsup src/index.ts --format cjs,esm --dts --sourcemap",
    "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
    "prepublishOnly": "npm run build",
    "test": "vitest run"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}